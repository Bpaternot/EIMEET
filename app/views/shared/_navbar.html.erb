<div class="navbar-wagon navbar-wagon-fixed">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
  <%= image_tag "eimeet_logo.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <!-- Different navigation if login or not -->

    <%= link_to t(".sign_in", default: "Join"), tournaments_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to t(".sign_in", default: "Create"), bars_path, class: "navbar-wagon-item navbar-wagon-link" %>

    <% if user_signed_in? %>

    <!-- Profile picture and dropdown -->
      <%= link_to destroy_user_session_path, class: "navbar-wagon-item navbar-wagon-link-log-out toggle-menu-content hidden", method: :delete do %>
        <%= t(".sign_out", default: "Log out") %>
      <% end %>

      <%= link_to t(".sign_in", default: "My Tournaments"), dashboard_path, class: "navbar-wagon-item navbar-wagon-link-account toggle-menu-content hidden" %>


      <% avatar_url = current_user.facebook_picture_url || current_user.username %>
      <% if current_user.facebook_picture_url %>
        <%= image_tag avatar_url, class: "avatar navbar-wagon-item navbar-wagon-link toggle-menu" %>
      <% else %>
      <div class="navbar-wagon-item navbar-wagon-link-account toggle-menu"><%= current_user.username %></div>
      <% end %>


      <% else %>
    <!-- Login text link -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <i class="fa fa-bars fa-bars-navbar"></i>
    <i class="fa fa-times hidden"></i>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12 text-center full-screen-menu hidden">
      <div class="links-item">
        <%= link_to t(".sign_in", default: "Join"), tournaments_path, class: "navbar-wagon-item navbar-wagon-link-mobile" %>
      </div>
      <div class="links-item">
        <%= link_to t(".sign_in", default: "Create"), "#", class: "navbar-wagon-item navbar-wagon-link-mobile" %>
      </div>
      <% if user_signed_in? %>
      <div class="links-item">
        <%= link_to t(".sign_in", default: "Tournaments"), "#", class: "navbar-wagon-item navbar-wagon-link-mobile" %>
      </div>
      <div class="links-item">
        <hr style="border: none; height: 2px; width: 200px;, text-align: center; color: #FAFAFA; background: #FAFAFA;"/>
      </div>
      <div class="links-item">
        <%= link_to destroy_user_session_path, class: "navbar-wagon-item navbar-wagon-link-mobile", method: :delete do %>
        <%= t(".sign_out", default: "Log out") %>
        <% end %>
      </div>
      <% else %>
      <div class="links-item">
        <hr style="border: none; height: 2px; width: 200px;, text-align: center; color: #FAFAFA; background: #FAFAFA;"/>
      </div>
      <div class="links-item">
        <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link-mobile" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
