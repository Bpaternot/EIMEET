
<% if tournament.number_players == 8 %>
  <% if tournament.players.count <= 2 %>
    <div class="progress">
      <div class="progress-bar-green-show" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" style="width: 25%;">
        Registration open - <%= remaining %> spaces remaining
      </div>
    </div>
  <% elsif tournament.players.count <= 3 %>
    <div class="progress">
      <div class="progress-bar-green-show" role="progressbar" aria-valuenow="38" aria-valuemin="0" aria-valuemax="100" style="width: 38%;">
        Registration open - <%= remaining %> spaces remaining
      </div>
    </div>
  <% elsif tournament.players.count <= 4 %>
    <div class="progress">
      <div class="progress-bar-green-show" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width: 50%;">
        Registration open - <%= remaining %> spaces remaining
      </div>
    </div>
  <% elsif tournament.players.count <= 5 %>
    <div class="progress">
      <div class="progress-bar-orange-show" role="progressbar" aria-valuenow="63" aria-valuemin="0" aria-valuemax="100" style="width: 63%;">
        Book fast - <%= remaining %> spaces remaining
      </div>
    </div>
  <% elsif tournament.players.count <= 6 %>
    <div class="progress">
      <div class="progress-bar-orange-show" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 75%;">
        Almost full ! - <%= remaining %> spaces remaining
      </div>
    </div>
  <% elsif tournament.players.count < 8 %>
    <div class="progress">
      <div class="progress-bar-orange-show" role="progressbar" aria-valuenow="88" aria-valuemin="0" aria-valuemax="100" style="width: 88%;">
        <% if remaining == 1 %>
          Hurry up ! - <%= remaining %> space remaining
        <% else %>
          Hurry up ! - <%= remaining %> spaces remaining
        <% end %>
      </div>
    </div>
  <% elsif tournament.players.count == 8 %>
    <div class="progress">
      <div class="progress-bar-red-show" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%;">
        Tournament full !
      </div>
    </div>
  <% end %>
