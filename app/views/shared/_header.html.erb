<div class="banner" style="background-image: linear-gradient(-225deg, rgba(30,30,30,0.6) 0%, rgba(30,30,30,0.6) 50%), url('<%= cl_image_path('background-test_yrp3fo') %>');">
  <div class="banner-content">
    <h1 style="color:#FAFAFA; font-size:48px;">Playing offline <span style="color:#A92222;">FIFA</span> tournaments</h1>
    <!-- <p>In bars, with friends and players...</p> -->
    <div class="form-homepage">
      <%= form_tag tournaments_path, method: :get, class: "form-group form-group-header form-inline" do %>

        <%= text_field_tag 'tournament_address', '', class: "form-control form-control-header", placeholder: "Type your address" %>
        <%= button_tag(type: "submit", class: "btn btn-primary btn-primary-header", id: "get_current_position") do %>
          <i class="fa fa-location-arrow" aria-hidden="true"></i>
        <% end %>

        <%= submit_tag 'GO', class: 'btn btn-primary btn-primary-header' %>
      <% end %>
    </div>
  </div>
</div>
