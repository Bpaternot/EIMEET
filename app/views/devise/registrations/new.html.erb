<div class="banner-for-log" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= cl_image_path('background2_aphwd4') %>');">
  <div class="banner-for-log-content">
    <div class="form-homepage">
            <h2>SIGN UP</h2>

            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :username, required: true, uniqueness: true, autofocus: true %>
              <%= f.input :email, required: true, autofocus: true %>
              <%= f.input :password, required: true %>
              <%= f.input :password_confirmation, required: true %>
            </div>

            <div class="form-actions">

            </div>
            <% end %>

            <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
